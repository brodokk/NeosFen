<FriendsListScreen>:
    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            id: connected_toolbar
            left_action_items: [["power", lambda x: root.disconnect()]]
            right_action_items: [["refresh", lambda x: root.refresh()]]
            type_height: "medium"
            size_hint_y: None
            type: "top"
            title: ""

        LoadingBoxLayout:
            id: loading_status

            MDLabel:
                text: "Loading cutie beans data uwu"
                halign: "center"
                font_size: 11

        LoadingCountBoxLayout:
            id: loading_count
            size_hint_y: None
            height: connected_contacts.texture_size[1]
            padding: dp(10), 0
            pos: dp(16), 0
            md_bg_color: app.theme_cls.primary_color

            MDLabel:
                id: connected_contacts
                adaptive_height: True
                shorten: True
                shorten_from: "right"
                theme_text_color: "Custom"
                halign: "left"

            MDLabel:
                halign: "right"
                id: last_refresh
                adaptive_height: True
                shorten: True
                shorten_from: "right"
                theme_text_color: "Custom"

        ScrollView:
            MDList:
                id: friendlist

